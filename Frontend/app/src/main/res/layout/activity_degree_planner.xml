<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:id="@+id/header"
                android:background="#6750a4">

            <ImageButton
                    android:src="@drawable/ic_back"
                    android:layout_height="match_parent"
                    android:id="@+id/backButton"
                    android:background="#00000000"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    android:layout_width="56dp" />

            <TextView
                    android:text="Degree Planner"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/headerTitle"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:textAlignment="textStart"
                    android:gravity="center"
                    android:padding="4dp"
                    android:textSize="18sp"
                    tools:ignore="RtlCompat" />
        </LinearLayout>

        <com.google.android.material.tabs.TabLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tabs">

            <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Summary"
                    android:id="@+id/overviewTabItem" />

            <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Progress"
                    android:id="@+id/scheduleTabItem" />

            <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recommendations"
                    android:id="@+id/insightsTabItem" />
        </com.google.android.material.tabs.TabLayout>

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="4dp"
                android:paddingEnd="4dp"
                android:padding="4dp"
                android:id="@+id/scroller">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp">

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/overviewContainer"
                        android:paddingTop="2dp"
                        android:paddingBottom="4dp">
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="6dp"
                            android:layout_marginVertical="1dp">

                        <TextView
                                android:text="Curriculum"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView3"
                                android:layout_weight="1"
                                android:textSize="16sp" />

                        <TextView
                                android:text="MMMMM  NNNNN"
                                android:layout_width="256dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/curriculumText"
                                android:textAlignment="textEnd"
                                android:textStyle="bold"
                                android:textSize="16sp" />
                    </LinearLayout>
                    <View
                            android:id="@+id/divider2"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="?android:attr/listDivider"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp" />

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_marginHorizontal="4dp">

                            <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:layout_margin="2dp">

                                <TextView
                                        android:text="Classification"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/textView16"
                                        android:layout_weight="1" />

                                <TextView
                                        android:text="Sophomore"
                                        android:layout_width="90dp"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/classifcationText"
                                        android:textAlignment="textEnd"
                                        android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:layout_margin="2dp">

                                <TextView
                                        android:text="Entry term"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/textView6"
                                        android:layout_weight="1" />

                                <TextView
                                        android:text="Spring 9999"
                                        android:layout_width="100dp"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/entryText"
                                        android:textAlignment="textEnd"
                                        android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:layout_margin="2dp">

                                <TextView
                                        android:text="Credits completed"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/textView4"
                                        android:layout_weight="1" />

                                <TextView
                                        android:text="99"
                                        android:layout_width="32dp"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/creditsCompletedText"
                                        android:textAlignment="textEnd"
                                        android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_marginHorizontal="4dp">
                            <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:layout_margin="2dp">

                                <TextView
                                        android:text="GPA"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/textView17"
                                        android:layout_weight="1" />

                                <TextView
                                        android:text="9.99"
                                        android:layout_width="100dp"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/gpaText"
                                        android:textAlignment="textEnd"
                                        android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:layout_margin="2dp">

                                <TextView
                                        android:text="Graduation"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/textView7"
                                        android:layout_weight="1" />

                                <TextView
                                        android:text="Spring 8888"
                                        android:layout_width="100dp"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/graduationText"
                                        android:textAlignment="textEnd"
                                        android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:layout_margin="2dp">

                                <TextView
                                        android:text="Credits in-progress"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/textView5"
                                        android:layout_weight="1" />

                                <TextView
                                        android:text="88"
                                        android:layout_width="32dp"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/creditsInpText"
                                        android:textAlignment="textEnd"
                                        android:textStyle="bold" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <View
                            android:id="@+id/divider"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="?android:attr/listDivider"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp" />

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/annotationsText"
                            android:text="S +MATHAP  MATHEMATICS +APPLICATIONS AS AN ADDITIONAL MAJOR UODINT110  INT 110 S HONF  LAS FULL MEMBER HONORS PROGRAM" />


                </LinearLayout>

                <View
                        android:id="@+id/divider3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/listDivider" />

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/scheduleContainer"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp">

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        <TextView
                                android:text="Progress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView2"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_marginRight="8dp"
                                android:gravity="center" />


                    </LinearLayout>

                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/sectionList"></LinearLayout>


                </LinearLayout>

                <View
                        android:id="@+id/divider4"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/listDivider" />

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/insightsContainer"
                        android:paddingVertical="4dp"
                        android:elevation="6dp">

                    <TextView
                            android:text="Courses"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView8"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginRight="8dp"
                            android:gravity="center"
                            android:layout_marginBottom="4dp" />

                    <TextView
                            android:text="placeholder"
                            android:id="@+id/courseSummary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/default_border"
                            android:paddingVertical="6dp"
                            android:paddingLeft="16dp"
                            android:paddingRight="8dp"
                            android:layout_marginVertical="4dp" />

                    <com.google.android.material.chip.ChipGroup
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:id="@+id/tagsChipGroup"
                            app:chipSpacingVertical="0dp"
                            app:chipSpacingHorizontal="4dp">

                    </com.google.android.material.chip.ChipGroup>


                    <TextView
                            android:text="placeholder"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/difficultyText"
                            android:lineHeight="16dp"
                            android:layout_margin="2dp" />

                    <TextView
                            android:text="placeholder"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/profText"
                            android:lineHeight="16dp"
                            android:layout_margin="2dp" />

                </LinearLayout>

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>